<!DOCTYPE html>
<html lang="en">
<%- include("partials/head.ejs") %> 

<button class="btn"><i class="fa fa-home"><a href="/"></a></i></button>

<button><a href="/">Home</a></button><br>
<button class="btn"><i class="fa fa-plus"><a href="/"></a></i></button>

<button><a href="/songs/:id/edit">Add a Song</a></button>

<h2>Welcome to your playlist</h2>
<table class="table">
    <thead>
      <tr>
        <th scope="col">Song Title</th>
        <th scope="col">Artist</th>
        <th scope="col">Genre</th>
        <th scope="col">Rating</th>
        </tr>

<% for (song of songs) {%> 
        <tbody>
            <tr>
              <td><%=song.title %></td>
              <td><%=song.artist%></td>
              <td><%=song.genre%></td>
             <span><td><%=song.rank%></td></span> 
                <td><form action="/songs/<%=song.id%>" method="PUT">
                    <button class="btn"><i class="fa fa-arrow-up">View</i></button></form></td>

                    <!-- <td><form action="/songs/<%=song.id%>?_method=PUT" method="POST">
                    <input type="submit" value="Update"></form></td> -->

                <td><form action ="/songs/<%=song.id%>?_method=DELETE" method="POST">
                    <button class="btn"><i class="fa fa-close">Remove</i></button>
                </form></td>

                <td>
                <a href="/songs/<%=song.id%>/edit"class="btn"><i class =" fa fa-folder">Update</i></a> 
                </td>

            <td><i onclick="myFunction(this)" class="fa fa-thumbs-up"></i></td>
            </form>
            </tr>
          </tbody>
            <%}%>
</body>
</html>
